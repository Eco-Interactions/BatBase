{% extends "layout.html.twig" %}

{% set blocks = entities %}

{% block headline %}Bat Eco-Interactions Database{% endblock %}

{% block headerstats %}
	000 Interactions | 000 Citations | 000 Locations in 00 Countries | 000 Bat Species | 000 Other Species
{% endblock %}

{% block detail %}
	<div id="about-db" class="top-pgs">
	{% embed 'two_cols_sect.html.twig' %}
		{% block firstcol %}
			<div id="about-db-data" class="wysiwyg">
				{{ blocks["about-db-data"]|raw }}
			</div>
			<div id="about-db-how-to-use" class="wysiwyg">
				{{ blocks["about-db-how-to-use"]|raw }}
			</div>
			<div id="how-to-cite" class="wysiwyg">
				{{ blocks["how-to-cite"]|raw }}
			</div>
			<div id="how-to-contribute" class="wysiwyg">
				{{ blocks["how-to-contribute"]|raw }}
			</div>

			<div id="new-data-entry" class="wysiwyg">
				{{ blocks["new-data-entry"]|raw }}
			</div>
		{% endblock %}
		{% block secondcol %}
			<div id="about-db-taxon-groups" class="wysiwyg">
				{{ blocks["about-db-taxon-groups"]|raw }}
			</div>
			<div id="about-db-caveats" class="wysiwyg">
				{{ blocks["about-db-caveats"]|raw }}
			</div>
		{% endblock %}
	{% endembed %}
	</div>
	<hr>
	{% set cntnrClass = is_full_view() ? '' : 'db-about-imgs' %}
	<div class="db-about-imgs">
		<img id="about-db-maps" src="{{ asset('build/images/ConceptualDataMap082020.svg') }}"
		alt="Conceptual Map of Data">
		<img id="db-new-data" class="about-db-maps" src="{{ asset('build/images/NewDataFlow082020.svg') }}" alt="New Data Workflow">
	</div>
{% endblock detail %}


