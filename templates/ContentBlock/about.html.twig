					</div>
				</div>

			{% endblock %}
			{% block secondcol %}
				<div id="team-hdr"><h4>Special Thanks</h4></div>
				<div class="bio-img"><img src="{{ asset('build/images/team-tuli.jpg') }}" alt="Tuli Image"></div>
				<div id="team-tuli" class="wysiwyg">
					{{ blocks["team-tuli"]|raw }}
				</div>
			{% endblock %}
