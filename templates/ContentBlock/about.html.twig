{% extends "layout.html.twig" %}

{% set blocks = entities %}

{% block headline %}The Project{% endblock %}

{% block headerstats %} 000 Users | 00 Editors | Est. 2002{% endblock %}

{% block detail %}
	<div id="about-pg" class="top-pgs">
		{% embed 'two_cols_sect.html.twig' %}
			{% block firstcol %}
				<div id="about-pg-history" class="wysiwyg">
					{{ blocks["about-pg-history"]|raw }}
				</div>
				<div id="about-pg-future-dev" class="wysiwyg">
					{{ blocks["about-pg-future-dev"]|raw }}
				</div>
			{% endblock %}
			{% block secondcol %}
				<div  id="about-pg-announcements" class="wysiwyg">
					{{ blocks["about-pg-announcements"]|raw }}
				</div>
				<br>
				<div  id="about-pg-contact" class="wysiwyg">
					{{ blocks["about-pg-contact"]|raw }}
				</div>
				<br>
					{% embed 'two_cols_sect.html.twig' %}
						{% block firstcol %}
							<div id="about-pg-acknowledgements" class="wysiwyg">
								{{ blocks["about-pg-acknowledgements"]|raw }}
							</div>
						{% endblock %}
						{% block secondcol %}
							<div id="project-partners" class="wysiwyg">
								<h3>Partners</h3><br>
								<a href="https://www.globalbioticinteractions.org/">
								   <img alt="GLOBI logo" src="{{ asset('build/images/globi_long.svg') }}"
								        width="150" height="70">
								</a>
							</div>
						{% endblock %}
					{% endembed %}
			{% endblock %}
		{% endembed %}
		<span class="em-mrg"></span>
	</div>
	<hr>
	<div id="team" class="top-em-mrg flex-row flex-wrap">
		<div id="team-hdr"><h3>The Bat Eco-Interactions Team</h3></div>
		{% embed 'two_cols_sect.html.twig' %}
			{% block firstcol %}
				<div class="bio-img"><img src="{{ asset('build/images/team-cullen.jpg') }}" alt="Cullen Image"></div>
				<div id="team-cullen" class="wysiwyg">
					{{ blocks["team-cullen"]|raw }}
				</div>
			{% endblock %}
			{% block secondcol %}
				<div class="bio-img"><img src="{{ asset('build/images/team-kelly.jpg') }}" alt="Kelly Image"></div>
				<div id="team-kelly" class="wysiwyg">
					{{ blocks["team-kelly"]|raw }}
				</div>
			{% endblock %}
		{% endembed %}
		<br>
		{% embed 'two_cols_sect.html.twig' %}
			{% block firstcol %}
				<div class="bio-img"><img src="{{ asset('build/images/team-taylor.jpg') }}" alt="Taylor Image"></div>
				<div id="team-taylor" class="wysiwyg">
					{{ blocks["team-taylor"]|raw }}
				</div>
			{% endblock %}
			{% block secondcol %}
				<div class="bio-img"><img src="{{ asset('build/images/team-sarah.jpg') }}" alt="Sarah Image"></div>
				<div id="team-sarah" class="wysiwyg">
					{{ blocks["team-sarah"]|raw }}
				</div>
			{% endblock %}
		{% endembed %}
		<br>
		<div id="extended-team">
		{% embed 'two_cols_sect.html.twig' %}
			{% block firstcol %}
				<div id="team-hdr"><h4>Editors</h4></div>
