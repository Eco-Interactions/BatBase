{% extends "layout.html.twig" %}

{% set blocks = entities %}

{% block headline %}
	Welcome to Bat Eco-Interactions
{% endblock %}

{% block headerright %}
	10642 Interactions | 16354 Bat Species | 524 Citations | 1745 Locations in 72 Countries
{% endblock %}

{% block detail %}
	<div id="home-pg" class="top-pgs">
	{% embed 'two_cols_sect.html.twig' %}
		{% block firstcol %}
			{% if is_granted('ROLE_QA_EDITOR') or is_granted('ROLE_QA_ADMIN') %}
				<h2 style="color: #2D7853;">Welcome {{ eifusername }}</h2>
				<div class="wysiwyg" id="member-welcome">
					{{ blocks['qa-welcome']|raw }}
				</div>
			{% elseif eifrole == 'user' %}
				<h2 style="color: #2D7853;">Welcome {{ eifusername }}</h2>
				<div class="wysiwyg" id="member-welcome">
					{{ blocks['member-welcome']|raw }}
				</div>
			{% endif %}
			<div class="wysiwyg" id="home-pg-intro">
				{{ blocks['home-pg-intro']|raw }}
			</div>
		{% endblock firstcol %}
		{% block secondcol %}
			<div class="wysiwyg" id="home-pg-second-col">
				{{ blocks['home-pg-second-col']|raw }}
			</div>
		{% endblock secondcol%}
	{% endembed %}
	</div>
{% endblock detail %}
