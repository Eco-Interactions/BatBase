{% form_theme form 'form/fields.html.twig' %}

<form action="{{ path('fos_user_registration_register') }}" method="POST" class="fos_user_registration_register">
{{ form_start(form) }}
    <span style="color: red;"><b>{{ form_errors(form) }}</b></span>

    {{ form_row(form.first_name) }}
    {{ form_row(form.last_name) }}
    {{ form_row(form.about_me) }}
    {{ form_row(form.email) }}
    {{ form_row(form.username) }}
    {{ form_row(form.plainPassword.first) }}
    {{ form_row(form.plainPassword.second) }}

    <input id="reg-tos" class="top-em-mrg" type="button" value="Agree to our Terms of Use" />
    <input id="reg-submit" type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" />
    {{ form_end(form) }}
</form>
