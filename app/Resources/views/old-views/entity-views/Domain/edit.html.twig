{% extends "layout.html.twig" %}

{% set domain = entity %}

{% block detail %}
    <ul class="record_actions">
        {{ form(edit_form) }}
    </ul>
    <p><a href="{{ path('app_domain_show', { 'id': domain.id }) }}"> Return to {{ domain }}</a></p>
{% endblock detail %}

{% block sidebar %}
    <h3><a href="{{ path('app_domain') }}">View All Domains</a></h3>
{% endblock sidebar %}

