{% extends "layout.html.twig" %}

{% set namingtype = entity %}

{% block detail %}
    <ul>
        <li>Homotypic</li>
        <li>Heterotypic</li>
        <li>Junior</li>
        <li>Senior</li>
        <li>Objective</li>
        <li>Subjective</li>
    </ul>
{% endblock detail %}
{% block adminlnks %}
    {% if is_granted('ROLE_ADMIN') %}
        <h3>Admin Links</h3>
        <a href="{{ path('app_naming_type_edit', { 'id': namingtype.id }) }}">Edit Naming Type</a>
    {% endif %}
{% endblock adminlnks %}
{% block sidebar %}
<h3><a href="{{ path('app_naming_type') }}">View All Naming Types</a></h3>
{% endblock sidebar %}
