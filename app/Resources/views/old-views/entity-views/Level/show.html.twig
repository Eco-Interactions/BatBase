{% extends "layout.html.twig" %}

{% set level = entity %}

{% block detail %}
    <ul>
        <li>Name: {{ level.name }}</li>
        <li>Plural name: {{ level.pluralname }}</li>
        <li>Ordinal: {{ level.ordinal }}</li>
    </ul>
{% endblock detail %}

{% block sidebar %}
    <h3><a href="{{ path('app_level') }}">View All Levels</a></h3>
{% endblock sidebar %}
