{% extends "layout.html.twig" %}

{% set blocks = entities %}

{% block headline %}Future Developments{% endblock %}

{% block detail %}
    <div id="future-dev-pg" class="top-pgs">
    {% embed 'two_cols_sect.html.twig' %}
        {% block firstcol %}
            {{ blocks["future-developments-announcements"]|raw }}
            {{ blocks["future-developments-overview"]|raw }}
        {% endblock firstcol %}
        {% block secondcol %}            
            <h3>Publications to be added to the database:</h3>
            <embed src="{{ asset('bundles/app/files/Publications To Add.pdf') }}" height="455px" width="740px">
            <h3>Suggestions?</h3>
            <p>If you have suggestions for additional publications or articles, 
                please send the relevant information and a pdf of it to 
                <a href="mailto:nowhere@mozilla.org?subject=website%20feedback">info@batplant.org</a>.</p>
        {% endblock secondcol%}
    {% endembed %}
    </div>
{% endblock detail %}
