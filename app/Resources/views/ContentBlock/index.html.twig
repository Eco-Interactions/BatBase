{% extends "layout.html.twig" %}

{% set contentBlocks = entities %}

{% set new_ent_route = path('admin_content_block_new') %}
{% set this_ent_plural = 'Content Blocks' %}
{% set this_ent_singl = 'Content Block' %}

{% block headline %}
    Content Blocks
{% endblock headline %}

{% block headerright %}
    <a href="{{ path('admin_content_block_new') }}" style="margin-left: auto;">New Content Block</a>
{% endblock headerright %}

{% block detail %}
	<ul>
        {% for contentblock in contentBlocks %}
            <li class="top-em-mrg">
                <a href="{{ path('admin_content_block_show', { 'slug': contentblock.slug }) }}">{{ contentblock }}</a>
            </li>
        {% endfor %}
    </ul>
{% endblock detail %}
