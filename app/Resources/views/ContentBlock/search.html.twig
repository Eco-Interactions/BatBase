{% extends "layout.html.twig" %}

{# {% set interaction = entity %} #}

{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" href="{{ asset('build/db.css') }}" />
{% endblock %}

{# Javascript after detail block. #}

{% block headline %}
    Database Search
{% endblock headline %}

{% block detail %}
    <div id="search-opts" class="flex-row">
        <div id="opts-col1" class="opts-col flex-col">
            <div id="filter-opts" class="flex-row" style="display: none;">
                <span>Group Interactions by: </span>
                <select id="search-focus" class="opts-box" data-field="Focus">
                    <option value="locs">Location</option>
                    <option value="srcs">Source</option>
                    <option value="taxa">Taxon</option>
                </select>
            </div>
            <div id="sort-opts" class="flex-row" style="display: none;"></div>
        </div>
        <div id="opts-col2" class="opts-col flex-col flex-wrap"></div>
        <div id="opts-col3" class="opts-col flex-col flex-wrap">
            <div id="shw-chngd-ints">
                <input type="checkbox" id="shw-chngd">
                <label for="shw-chngd">Show records updated since:</label>
                <input type="radio" id="fltr-tdy" name="shw-chngd" checked="checked" value="today">
                <label for="fltr-tdy">Today</label>
                <input type="radio" id="fltr-cstm" name="shw-chngd" value="custom">
                <label for="fltr-cstm" style="margin-right: .1em">Custom</label>
                <input type="text" id="time-fltr" disabled="disabled">
            </div>
            <div class="bttm-row flex-row">
                <button id="shw-map" class="ag-fresh tbl-bttn">
                    Show Interactions on Map</button>
            </div>
        </div>
        <div id="opts-col4" class="flex-col">
            <button id="strt-tut" class="ag-fresh tbl-bttn">Tutorial</button>
            <button id="show-tips" class="ag-fresh tbl-bttn">Search Tips</button>
        </div>
    </div>
    <div id="tool-bar" class="flex-row">
        <div class='flex-row tbl-tools'>
            <div id='xpand-tree'>
                <button id="xpand-all" class="ag-fresh ag-header-cell tbl-bttn" name="xpand-all">Expand All</button>
                <button class="ag-fresh ag-header-cell tbl-bttn" name="xpand-1">+</button>
                <button class="ag-fresh ag-header-cell tbl-bttn" name="collapse-1">-</button>
            </div>
            <button class="ag-fresh ag-header-cell tbl-bttn" name="reset-tbl">Reset Data</button>
        </div>
        <div id="tbl-status" class="flex-row">
            <div id="xtrnl-filter-status">Filtering on:</div>
            <div id="tbl-filter-status"></div>
        </div>
        <div class='tbl-tools' style='align-self: flex-end;'>
            <button class="ag-fresh ag-header-cell tbl-bttn" name="show-hide-col" disabled>Show/Hide Columns</button>
            <button class="ag-fresh ag-header-cell tbl-bttn" name="csv">Download CSV</button>
        </div>
    </div>
    
    <div id="db-view">
        <div id="search-tbl" class="ag-fresh"></div>
        <div id="map" style="display: none;"></div>
        <div id="db-overlay"></div>
        <div id="db-popup"></div>
    </div>

{% endblock detail %}

{% block javascripts %} 
    {{parent()}}    
    <script src="{{ asset('build/db.js') }}"></script>
{% endblock %}
