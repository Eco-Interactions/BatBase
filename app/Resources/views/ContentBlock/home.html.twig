{% block detail %}
	<div id="home-pg" class="top-pgs">
	{% embed 'two_cols_sect.html.twig' %}
		{% block firstcol %}
			{% if eifrole == 'user' %}
				<h2 style="color: #2D7853;">Welcome {{ eifusername }}</h2>
				<div class="wysiwyg" id="member-welcome">
					{{ blocks['member-welcome']|raw }}
				</div>
			{% endif %}
			<div class="wysiwyg" id="home-pg-intro">
				{{ blocks['home-pg-intro']|raw }}
			</div>
		{% endblock firstcol %}
		{% block secondcol %}
			<div class="wysiwyg" id="home-pg-second-col">
				{{ blocks['home-pg-second-col']|raw }}
			</div>
		{% endblock secondcol%}
	{% endembed %}
	</div>
{% endblock detail %}
