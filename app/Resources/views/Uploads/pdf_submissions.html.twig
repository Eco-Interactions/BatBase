{% extends "layout.html.twig" %}

{% block datatable %}pub_pdf_tbl{% endblock datatable %}

{% block headline %}
    Submitted Publications
{% endblock headline %}

{% block detail %}
    <table id="pub_pdf_tbl" class="display" style="width: 100%;">
    <thead>
        <tr>
            <th>Description</th>
            <th>Preview PDF</th>
            <th>Download PDF</th>
            <th>User</th>
            <th>Email</th>

        </tr>
    </thead>
    <tbody>
        {% for pub in entities %}
            <tr>
                <td>{{pub.description}}</td>
                <td><input type="button" name="preview-pdf"></td>
                <td><input type="button" name="download-pdf"></td>
                <td>{{pub.createdBy.firstName}}  {{pub.createdBy.lastName}}</td>
                <td>{{pub.createdBy.email}}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock detail %}
