/**
 * Styles for the user-feedback popup and view-page.
 *
 * TOC
 *     POPUP
 *         FIELD VALIDATION-ALERT
 *         USER-FEEDBACK FIELDS
 *     VIEW-PAGE
 */
 @import '../util/*'
 /* ============================ POPUP ====================================== */
#b-overlay-popup.feedback-popup
    background-color: #bbecef
    max-width 700px
    max-height 50%
    min-height 333px
    top 25%

    @media screen and (max-width 700px)
        top 5%

.feedback-popup h3
    margin-bottom: .5em
/* ----------------------- FIELD VALIDATION-ALERT --------------------------- */
.feedback-popup [id$="_alert"]
    color: grey
    justify-content: flex-end
/* ----------------------- USER-FEEDBACK FIELDS ----------------------------- */
#topic_row input
    margin-bottom: .5em
    width: 100%
    line-height: 2em

.feedback-popup textarea
    width: 100%
    height: 10em
    padding: .4em
/* ========================== VIEW PAGE ===================================== */
#feedback-context-frame
    position: absolute
    border: none
    width: 100%
    height: 100%

#feedback-popup
    background-color: $lightest-green
    box-shadow: .4em .4em .5em rgba(0,0,0,0.6)
    padding: 2em
    position: absolute
    top: 2em
    right: 5em
    z-index: 5001
    width: 36em

#feedback-popup textarea
    display: block
    width: 100%
    height: 6em
    margin: 0 0 .5em 0
