/**
 * Styles for the user-feedback popup and view-page.
 *
 * TOC
 *     POPUP
 *         FIELD VALIDATION-ALERT
 *         USER-FEEDBACK FIELDS
 *     VIEW-PAGE
 */
 /* ============================ POPUP ====================================== */
#b-overlay-popup.feedback-popup
    background-color: #bbecef
    max-width 700px
    max-height 50%
    min-height 333px
    top 25%

    @media screen and (max-width 700px)
        top 5%

.feedback-popup h3
    margin-bottom: .5em
/* ----------------------- FIELD VALIDATION-ALERT --------------------------- */
.feedback-popup [id$="_alert"]
    color: grey
    justify-content: flex-end
/* ----------------------- USER-FEEDBACK FIELDS ----------------------------- */
#Topic_row input
    margin-bottom: .5em
    width: 100%
    line-height: 2em

.feedback-popup textarea
    width: 100%
    height: 10em
    padding: .4em
 /* ========================= VIEW PAGE ===================================== */
#feedback-container
    position: absolute
    top: 0
    left:50%
    height: 500px
    width: 1500px
    margin-left:-750px
    z-index: 5001

#feedback-context-frame
    position: absolute
    border: none
    width: 100%
    height: 100%

#feedback-viewer-popup
    background-color: #a2dadd
    box-shadow: 5px 5px 7px rgba(0,0,0,0.6)
    padding: 2em
    position: absolute
    top: 20px
    right: 20px
    z-index: 5001

#feedback-viewer-popup>p
    width: 23em
    margin: .1em 0 .1em 0

#feedback-viewer-popup>label
    font-weight: bold
    margin-right: 1em
    margin-top: 1em

#feedback-viewer-popup input
    width: 23em
    margin-bottom: .5em

#feedback-viewer-popup>textarea
    display: block
    width: 26.7em
    height: 6em
    margin: 0 0 .5em 0

#feedback-viewer-popup>button
    border: 1px solid #1b3b1b
    background: #245A37
    color: #a2dadd
    font-weight: bold
    border-radius: 5px
    box-shadow: 2px 2px 3px rgba(0,0,0,0.6)
    padding: .5em
    margin: .5em 1em 0 0

#feedback-viewer-popup>button:hover
    background: #2D7853
    box-shadow: 3px 3px 4px rgba(0,0,0,0.6)

span.lbl
    font-weight: bold

#feedback-viewer-popup .top-mrg
    margin-top: .5em

#feedback-viewer-popup .btm-mrg
    margin-bottom: .5em

#scrollbar-measure
    width: 100px
    height: 100px
    overflow: scroll
    position: absolute
    top: -9999px