/**
 * Entty show page stylus code.
 *
 * TOC:
 *    CSV BUTTON
 *    DATA SECTION
 *      SECTON ROW
 *      ROW CELL
 *      SPECILIZED STYLES
 *    MEDIA
 */
@import '../util/*'

/* =========================== CSV BUTTON ================================= */
#entity-csv
    opacity: .4
    cursor: wait
    margin-left: 1em

#entity-csv:before
    content: embedurl('../../images/icons/file-download.svg', 'utf8')
    width: 12px

/* =========================== DATA SECTION ================================= */
.data-sect
    @extend .flex-col
    margin: 1em

.data-sect h3
    font-weight: 600

.data-sect > *
    margin-bottom: 1em
    justify-content: space-between
    width: 100%
/* -------------------------- SECTION ROW ----------------------------------- */
.sect-row
    @extend .flex-row

.sect-row > .group-row
    width: 100%
/* ----------------------------- ROW CELL ----------------------------------- */
.data-sect label
    font-weight: 600

.data-sect > div
    margin-left: .5em

.cell-data
    margin: .5em
    line-height: 1.4

.cell-data > *
    // margin: 0 .5em
    margin: .25em

.cell-data > div
    min-width: 122px

.max-cntnt
    width: max-content
.r-mgn2
    margin-right: 2em
/* -------------------------- SPECIALIZED STYLES ---------------------------- */
/* -------------- INTERACTION PAGE ----------------- */
#Citation-cell
    max-width: 42vw

.interaction-show > #data-sect-1 > #sect-row1
    justify-content: flex-start

.interaction-show > #data-sect-1 > #sect-row1 > div
    margin-right: 5em

/* -------------- TAXON PAGE ----------------- */
.show-int-cnt
    // display: inline-block;
    padding: .2em .7em .4em 0

.taxon-show
    flex-direction: row

.taxon-show #data-sect-2 #sect-row1
    justify-content: initial

.taxon-show #data-sect-1
    // min-width: 1em
    margin-right: 5em

/* =============================== MEDIA ==================================== */
/* NOTE: ONLY SINGLE LINE COMMENTS CAN BE INSIDE MEDIA QUERY */
@media $mqTablet
    .sect-row, .taxon-show   //------- FLEX -----
        flex-wrap: wrap

    .sect-row, .sect-row > div, .group-col > div, .taxon-show #data-sect-2 #sect-row1
        flex-direction: column

    .cell-data > *  // ------ MISC ------
        margin: .25em 0

    .cell-data > div[id$='-data']
        margin-left: 1em

    #Citation-cell   // ----- UNSET ----
        max-width: unset

    #InteractionDetails-data-sect #sect-row1 > div
        margin-right: unset

    .max-cntnt
        width: unset

    .taxon-show #data-sect-2 #sect-row1
        justify-content: unset

    .interaction-show > #data-sect-1 > #sect-row1 > div, .taxon-show #data-sect-1
        margin-right: unset