 /* ====================== TABLE POPUP ====================================== */
#db-popup
    background: #FFF
    display: none
    position: relative
    z-index: 2000
    text-align: center
    font-size: 20px
    box-shadow: 3px 3px 20px 1px rgba(0,0,0,0.75)
    bottom: 75%
    left: 45%
    width: 500px
    height: 100px
    padding: 22px
    margin-left: -150px
    margin-top: -50px
    border-radius: 5px

#db-overlay
    display: none
    position: absolute
    z-index: 1000
    top: 0
    left: 0
    background-color: grey
    width: 100%
    height: 91%
    opacity: .2
