/* ------------- Review Details (Second) Column ----------------------------- */
#rvw-pnl-col2
    flex: 0 1 490px
    border-left: black 1px solid
    border-right: black 1px solid
    margin-left: .5em

/* ------------- Modification and Statistics (Third) Column ----------------- */
#rvw-pnl-col3
    flex: 1 1 412px

#rvw-pnl-col3-content
    width: max-content

#rvw-pnl-col3>div:first-child
    margin-bottom: 1em

#rvw-pnl-col3 label>span:first-child
    font-weight: 600
    margin-right: 1em