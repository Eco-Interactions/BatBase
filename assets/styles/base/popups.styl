/* -------------- BASE STYLES ------------ */
#b-overlay
    display: none
    position: fixed
    top: 0
    bottom: 0
    background: rgba(0,0,0,.6)
    width: 100vw
    height: 100vh
    z-index: 1500
    justify-content: center
    @media screen and (max-width: 750px)
        display: fixed

.overlay // Used for logo and optimization popups on mobile
    position: fixed
    top: 0
    bottom: 0
    width: 100vw
    height: 100vh

.popup
    display: none
    position: relative
    background-color: WhiteSmoke
    box-shadow: 3px 3px 20px 1px rgba(0,0,0,0.75)
    z-index: 1501
    border-radius: 5px
    margin: auto
    padding: 2em
    top 3em
    height fit-content
    max-height 80vh
    max-width 90vw
/* --------- TOS POPUP ------------- */
.tos-popup
    overflow-y: scroll
    max-width 777px

.tos-popup p
    padding .25em 0 .25em 0

.tos-bttn
    align-self: flex-end
    margin-top .5em
/* --------- PDF Popup ------------- */
.pdf-popup
    width: 1000px
    margin: 5em auto
    height: 77vh
    top 0
    max-height 77vh
    max-width 77vw
/* --------- MOBILE OPT ------------- */
.mobile-opt-overlay
    position absolute
    height 100%
    width 100%
    background: rgba(0,0,0,.8)
    z-index: 111
    justify-content: center
