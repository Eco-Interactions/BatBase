/*-------------- IMAGE SLIDER -------------*/
$slider-height
    height: 33vh
    max-height 423px
    @media screen and (min-width: 1330px)
        height: 375px
    @media screen and (max-width: 500px)
        height: 27vh

#slider-logo 
    content url('../images/logo_vert_pale_txt.svg')
    position: absolute
    top: 15%
    left: 5%
    z-index: 5
    max-height 225px
    height 14vw
    @media screen and (min-width: 800px) and (max-width 1300px)
        height 20vw
    @media screen and (min-width: 400px) and (max-width 800px)
        height 28vw

#slider-logo.mobile-hdr
    position relative
    background-color Black
    height 27vh
    padding: 22px
    width: 100vw
    left 0px

#slider-logo.overlay 
    position relative
    max-width 20vw 
    top 0px
    @media screen and (max-width: 500px)
        max-width: 90vw;
    @media screen and (min-width: 500px) 
        max-width: 35vw;
        top 1em
    
#slider-overlay
    @extends $slider-height
    position: absolute
    z-index: 10
    height max-content
    max-width: 30vw;
    @media screen and (max-width: 500px)
        max-width: 100vw;
        background-color black
        position relative
    @media screen and (min-width: 700px) and (max-width: 1000px)
        max-width: 50vw;
    @media screen and (min-width: 1000px) and (max-width: 1330px)
        max-width: 40vw;

#slider-overlay.mobile-hdr
    max-width 100vw
    background-color black
    
#chrome-opt-msg /* Shown on all browsers except chrome */
    position: relative
    color: silver
    
#img-slider 
    @extend $content-width
    max-width: 100vw;
    overflow hidden

.slide 
    @extends $slider-height
    position: absolute
    z-index: 0
    width: 100%
    transition: all 2s ease-in-out
    opacity: 0
    object-fit: cover