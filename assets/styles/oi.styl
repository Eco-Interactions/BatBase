/*
 * Main style sheet for batplant.org
 */
/* ==================== VARIABLES ========================== */
/* greens-pallete */
--darkest-g = #1b3b1b
--darker-g = #245A37
--dark-g = #2D7853
--med-g = #36976F
--light-g = #3fb58b
--lighter-g = #77cab8
--lightest-g = #a2dadd

/* ==================== ROOT ELEM STYLES ========================== */
// Include paddings inside width for everything
*
    box-sizing border-box
a:link 
    color: --dark-g
    text-decoration: underline
    
a:visited 
    color: --dark-g
    
a:hover 
    text-shadow: 1px 1px 3px rgba(0,0,0,0.2)
    
body
    min-width 100vw
    
button 
    border: 1px solid     
    border-color: rgb(216, 216, 216) rgb(209, 209, 209) rgb(186, 186, 186)
    border-radius: 4px
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif
    // font-size: 15px
    color: #222
    margin: 0 .3em 0 .2em
    line-height: 1.4;
    background: linear-gradient(#fff, #d3d3d3)
    
form input, form select, form textarea 
    font-size: 1em
    padding: .2em
    margin: .5em .5em .5em 0
    
form textarea 
    // vertical-align: top

form label
    // vertical-align: text-top
    margin-right: .5em
    
h2
    font-size: 1.4em;
    
h3
    font-size: 1.3em;
    
input[type='button']
    @extend button

input[type='submit']
    @extend button
    
label.required:before 
    content: "*"

span.lbl
    font-weight: bold
/* ==================== UTILITY STYLES ========================== */
.top-em-mrg 
    margin-top: 1em

.bot-em-mrg
    margin-bottom: 1em
    
.em-mrg
    margin: 1em

.hiddenElem 
    display: none

.invis
    visibility: hidden

.waiting 
    cursor: wait
/*--- List Styles ---*/
ol>li 
    list-style: decimal;
    display: list-item;
.disc-list>li 
    list-style: disc
    display: list-item
    padding-left: 2em
    
.circle-list>li 
    list-style: circle
    display: list-item
/*-------- Flex ----------*/
.flex-row 
    display: flex
    flex-direction: row

.flex-col 
    display: flex
    flex-direction: column
    
.flex-wrap 
    flex-wrap: wrap
/* ==================== MAIN LAYOUT ========================== */            
$content-width
    max-width: 100vw       
    @media screen and (min-width: 1500px)
            max-width: 1500px       
    @media screen and (max-width: 1500px) and (min-width: 1330px)
            max-width: 1330px
            
#pg-container
    @extend $content-width
    position: relative
    margin: 0 auto    
/*-------------- IMAGE SLIDER -------------*/
$slider-height
    height: 33vh
    max-height 423px
    @media screen and (min-width: 1330px)
        height: 375px
    @media screen and (max-width: 500px)
        height: 27vh

#slider-logo 
    content url('../images/logo_vert_pale_txt.svg')
    position: absolute
    top: 15%
    left: 5%
    z-index: 5
    max-height 225px
    height 14vw
    @media screen and (min-width: 800px) and (max-width 1300px)
        height 20vw
    @media screen and (min-width: 600px) and (max-width 800px)
        height 30vw

#slider-logo.mobile-hdr
    position relative
    background-color Black
    height 27vh
    padding: 22px
    width: 100vw
    left 0px

#slider-logo.overlay 
    position relative
    max-width 20vw 
    top 0px
    @media screen and (max-width: 500px)
        max-width: 90vw;
    @media screen and (min-width: 500px) 
        max-width: 35vw;
        top 1em
    
#slider-overlay
    @extends $slider-height
    position: absolute
    z-index: 10
    height max-content
    max-width: 30vw;
    @media screen and (max-width: 500px)
        max-width: 100vw;
        background-color black
        position relative
    @media screen and (min-width: 700px) and (max-width: 1000px)
        max-width: 50vw;
    @media screen and (min-width: 1000px) and (max-width: 1330px)
        max-width: 40vw;
    
#chrome-opt-msg /* Shown on all browsers except chrome */
    position: relative
    color: silver
    
#img-slider 
    @extend $content-width
    max-width: 100vw;
    overflow hidden

.slide 
    @extends $slider-height
    position: absolute
    z-index: 0
    width: 100%
    transition: all 2s ease-in-out
    opacity: 0
    object-fit: cover
/**--------------- Header Menu Styles -------------------*/
#sticky-hdr
    @extend $content-width

#hdrmenu 
    display: flex
    justify-content: space-between
    height: 43px
    line-height: 43px
    // border-bottom: 1px solid Gray
    background-color: White
    
.top-sticky 
    @extend $content-width
    z-index: 1001 
    position: fixed 
    top: 0 
    background-color: White
    width: 100%

#site-name 
    text-align: center
    font-size: 23px
    color: DimGray
    height: 43px
    line-height: 43px
    margin-right .5em
/* -- PAGE HEADER BAR -- */
#pg-hdr 
    display: flex
    position: relative
    justify-content: space-between;
    text-align: right;
    font-size: 21px;
    height: 43px;
    padding: 9px 8px 0 12px;

#hdr-right 
    display: flex
    justify-content: flex-start
    background: White
    
#hdricopen {
    width: 1em;
    height: auto;
    z-index: 0;
    margin: 0 1em 0 .5em;
    position: relative;
    top: .1em;
}
#hdrmenu ul li {
    position:relative;
    display:inline-block;
    margin:0;
    padding: 0;
}
#hdrmenu ul li.current-menu-item {
    background: #ddd;
}
/* --------- PAGE CONTENT ----------------- */
#content-detail
    position: absolute
    max-width: 100%
    padding .5em
    margin-top 1em
    top: calc(33vh + 86px) > 506px ? 506px : calc(33vh + 86px);
    @media screen and (min-width: 1330px)
        top: 461px
    @media screen and (max-width: 1330px)
        margin-top .5em
        top: calc(33vh + 86px)

.top-pgs p 
    margin 1em
    font-size 1.15em

#footer 
    width: 100%
    padding: 1em 0 3em 0
    border-top: 1px solid #000
    justify-content: space-between
    margin-top 1em

#footer p 
    font-size .8em
/* ---- PAGE SPECIFIC ---- */
.first-col, .second-col 
    max-width 100vw
    padding .5em

/*-- HOME --*/
#home-pg .two-col-cntnr > div, #team .first-col, #team .second-col
    flex: 1 1 420px;
/*-- PROJECT --*/
#about-pg .first-col
    @extend .flex-col
    flex: 2 1 980px
    
#about-pg .second-col
    @extend .flex-col
    flex: 1 0 500px
    
