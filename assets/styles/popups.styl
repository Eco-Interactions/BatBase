/* -------------- BASE STYLES ------------ */
#b-overlay 
    display: none
    position: fixed
    top: 0
    bottom: 0
    background: rgba(0,0,0,.6)
    width: 100vw
    height: 100vh
    z-index: 1500
    justify-content: center
    @media screen and (max-width: 750px)
        display: fixed

.overlay // Used for logo and optimization popups on mobile
    position: fixed
    top: 0
    bottom: 0
    width: 100vw
    height: 100vh

.popup
    display: none
    position: relative
    background-color: WhiteSmoke
    box-shadow: 3px 3px 20px 1px rgba(0,0,0,0.75)
    z-index: 1501
    border-radius: 5px
    margin: auto
    padding: 2em
    top 3em
    max-height 80vh
    max-width 90vw
    @media screen and (min-width: 750px)
        max-width 700px
        max-height 50%
        top 25%
/* --------- TOS POPUP ------------- */
.tos-popup 
    overflow-y: scroll
    
.tos-popup p 
    padding .25em 0 .25em 0

.tos-bttn
    align-self: flex-end
    margin-top .5em
/* --------- FEEDBACK POPUP ------------- */
.feedback-popup 
    background-color: #a2dadd !important

.feedback-popup > p 
    margin-bottom: .7em
    
.feedback-popup input 
    margin-bottom: .5em;
    width 100%

.feedback-popup > textarea 
    display: block
    width 100%
    height 100px
    margin: .7em 0 .5em 0

.feedback-popup > button 
    border: 1px solid #1b3b1b
    background: #245A37
    color: #a2dadd
    font-weight: bold
    border-radius: 5px
    box-shadow: 2px 2px 3px rgba(0,0,0,0.6)
    padding: .5em
    margin: .5em 1em 0 0

.feedback-popup > button:hover 
    background: #2D7853
    box-shadow: 3px 3px 4px rgba(0,0,0,0.6)
/* --------- MOBILE OPT ------------- */
.mobile-opt-overlay
    position absolute
    height 100%
    width 100vw
    background: rgba(0,0,0,.8)
    z-index: 777
    justify-content: center
