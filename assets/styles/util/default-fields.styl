
/* =========================== FORMS ======================================== */
/* CONTAINER FOR FIELD ROWS */
[id$="_row"]
    padding: .2em .75em .3em  .75em
    width: 100%

.fWidthRow
    width: 100%

/* FORM FIELD-ROWS */
[id$="_row"] .field-cntnr
    flex-grow: 1

/* FORM FIELD-ROWS */
[id$="_row"] .field-row
    justify-content: space-between

/* LABEL IN FIELD-ELEMS */
[id$="_lbl"]
    font-size: 1em
    padding: 0.2em .5em 0.2em 0
    font-weight: bold
    min-width: fit-content

/* FORM FOOTER */
[id$="_footer"]
    margin-top: 1em

/* =========================== FIELDS ======================================= */
/* CONTAINER FOR COMBOBOX GROUPS */
.field-cntnr           /* .flex-row also on elems */
    flex: 1 0 auto
    justify-content: space-between

/* CONTAINER FOR FIELD-ELEMS */
.field-elems
    margin-top: .3em

.row-field
    flex-grow: 1
    margin-right: 1em !important

/* ======================== ELEMENTS ======================================== */
.field-input
    margin-left: 1em
    flex-grow: 1
    margin-right: 1em
/* ------------------------- Selectize -------------------------------------- */
.selectize-input
    padding: 4px 33px 4px 4px !important

.selectize-input, .selectize-control.single .selectize-input.input-active
    display: inline-flex

.selectize-dropdown
    z-index: 1111 !important
    margin-left 0 !important

div.option.selected[data-value='new']  //Hides 'Creating...' option
    display: none