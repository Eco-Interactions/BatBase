/* ====================== SELECTORS FOR JS ================================== */
/** Multi-input field cntnr */
.cntnr
/** Applied to elem inputs. Used to grab input within field elements. */
.f-input
/* =========================== FORMS ======================================== */
/* CONTAINER FOR FORM-ROW */
.row
    display: flex  //default: row nowrap
    justify-content: space-evenly
    width: 100%
/* CONTAINER FOR FIELDS WITH MULTIPLE/DYNAMIC INPUTS, VERTICALLY STACKED */
[id$="_f-cntnr"]
    display: flex
    flex-direction: column
    // justify-content: stretch

[id$="_f-cntnr"]>div[id$="_f"]
    margin-bottom: .5em

/* CONTAINER FOR FIELD DIV>(alertDIV, fieldDIV) */
[id$="_f"]
    padding: .5em
    // width: 100%
    // flex-grow: 1

/* FORM FIELD (fieldDIV>[LABEL, INPUT] ) */
[id$="_f"] .form-field
    justify-content: space-between

/* FIELD LABEL */
[id$="_lbl"]
    font-size: 1em
    padding: 0.2em .5em 0.2em 0
    font-weight: bold
    min-width: fit-content
    width: fit-content

/* FIELD INPUT */
input[class$="-field"]
    width: -webkit-fill-available

/* FORM FOOTER */
[id$="_footer"]
    margin-top: 1em

/* =========================== FIELDS ======================================= */
/* CONTAINER FOR COMBOBOX GROUPS */
.field-cntnr           /* .flex-row also on elems */
    flex: 1 0 auto
    justify-content: space-between

/* CONTAINER FOR FIELD-ELEMS */
.field-elems
    margin-top: .3em

.row-field
    flex-grow: 1
    margin-right: 1em !important
/* ---------------------------- INPUT --------------------------------------- */
.w-24
    width: 24em !important

.w-20
    width: 20em !important

.w-16
    width: 16em !important

.w-12
    width: 12em !important

.w-8
    width: 8em !important

.w-4
    width: 4em !important
/* ======================== ELEMENTS ======================================== */
.field-input
    margin-left: 1em
    flex-grow: 1
    margin-right: 1em
/* ------------------------- Selectize -------------------------------------- */
.selectize-input
    padding: 4px 33px 4px 4px !important

.selectize-input, .selectize-control.single .selectize-input.input-active
    display: inline-flex

.selectize-dropdown
    z-index: 1111 !important
    margin-left 0 !important

div.option.selected[data-value='new']  //Hides 'Creating...' option
    display: none