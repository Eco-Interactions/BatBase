/* ==========================================================================
   ------------------------- STYLE CLASSES ---------------------------------- */
.top-em-mrg 
    margin-top: 1em
    
.em-mrg
    margin: 1em

.invis  // Used in data entry forms
    visibility: hidden

.waiting 
    cursor: wait
/*------------- Flex ------------------*/
.flex-row 
    display: flex
    flex-direction: row

.flex-col 
    display: flex
    flex-direction: column
    
.flex-wrap 
    flex-wrap: wrap
    
.flex-grow
    flex-grow 1
/*------------ Lists -------------*/
$list-styles 
    list-style-position: outside;
    display: list-item;
    padding: .25em .75em .25em 0 
    
ol>li 
    @extends $list-styles
    list-style: decimal;

.disc-list>li 
    @extends $list-styles
    list-style: disc
    
.circle-list>li 
    @extends $list-styles
    list-style: circle

.disc-list, .circle-list
    padding-inline-start: 1.5em
    padding-top .5em
